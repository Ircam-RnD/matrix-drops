doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport")
    title #{title}
    script(src="/socket.io/socket.io.js")
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 #{title}
    script(src="/javascripts/admin.js")
    #admin.admin
      #numPlayers-div
      | max drops: 
      button(id='maxDrops-decr', width='0.5em') <
      input(id='maxDrops-box', type='number', value='', min='0', max='100', step='1', size='2')
      button(id='maxDrops-incr', width='0.5em') >
      <br>
      | state: 
      select(id="state-box")
        option reset
        option running
        option end
      <br>
      button(id='clear-btn') clear
